# gf docker -t gf-demos
FROM loads/alpine:3.8

LABEL maintainer="john@goframe.org"

###############################################################################
#                                INSTALLATION
###############################################################################

# 设置固定的项目路径
ENV WORKDIR /var/www/gf-demos

# 添加应用可执行文件，并设置执行权限
ADD ./bin/linux_amd64/gf-demos   $WORKDIR/gf-demos
RUN chmod +x $WORKDIR/gf-demos

# 添加I18N多语言文件、静态文件、配置文件、模板文件
ADD public   $WORKDIR/public
ADD config   $WORKDIR/config
ADD template $WORKDIR/template

###############################################################################
#                                   START
###############################################################################
WORKDIR $WORKDIR
CMD ./gf-demos
EXPOSE 8199